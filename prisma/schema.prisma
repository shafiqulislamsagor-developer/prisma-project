generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMAER
  ADMIN
  SELLER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole @default(CUSTOMAER)
  isBlocked Boolean  @default(false)
  createdAt DateTime @default(now())
  profile   Profile?

  @@map("user")
}

model Profile {
  id           String   @id @default(uuid())
  name         String
  profilePhoto String?
  phoneNumber  String?
  address      String?
  email        String   @unique
  lastModified DateTime @updatedAt

  userUniqueId User @relation(fields: [email], references: [email])

  @@map("profile")
}
