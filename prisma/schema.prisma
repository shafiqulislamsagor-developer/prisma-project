generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMAER
  ADMIN
  SELLER
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      UserRole
  isBlocked Boolean  @default(false)
  createdAt DateTime @default(now())
  Profile   Profile?

  @@map("user")
}

model Profile {
  id           String   @id @default(uuid())
  name         String
  email        String   @unique
  userId       String   @unique
  lastModified DateTime @updatedAt
  bio          String

  userUniqueId User @relation(fields: [userId], references: [id])

  @@map("profile")
}
